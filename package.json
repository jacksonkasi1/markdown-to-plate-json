{
	"name": "plate-editor",
	"version": "1.1.0",
	"description": "Bidirectional converter between Markdown and Plate JSON format",
	"module": "index.ts",
	"type": "module",
	"private": false,
	"scripts": {
		"convert": "bun run converter.ts",
		"test": "bun run converter.ts test.md output.json",
		"test:reverse": "bun run converter.ts output.json output.md",
		"dev": "bun run --watch converter.ts",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"type-check": "tsc --noEmit"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@types/bun": "latest"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@platejs/list": "^52.0.1",
		"@platejs/markdown": "^52.0.4",
		"@udecode/plate-common": "^42.0.0",
		"@udecode/plate-core": "^49.0.0",
		"remark": "^15.0.1",
		"remark-gfm": "^4.0.1",
		"remark-parse": "^11.0.0",
		"slate": "^0.118.1",
		"slate-hyperscript": "^0.100.0",
		"unified": "^11.0.5"
	}
}
